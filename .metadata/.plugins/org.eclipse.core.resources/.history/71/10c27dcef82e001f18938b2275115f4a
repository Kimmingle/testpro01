<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardMapper" >

	
	<select id = "findAll"  resultType="_int"> 
		SELECT 
    BOARD_NO,
    BOARD_TITLE,
    BOARD_WRITER,
    COUNT,
    CREATE_DATE,
    ORIGIN_NAME, 
   
FROM
    (SELECT 
        BOARD_NO,
        BOARD_TITLE,
        BOARD_WRITER,
        COUNT,
        CREATE_DATE,
        ORIGIN_NAME, 
        ROWNUM RNUM
    FROM
        (SELECT 
            BOARD_NO,
            BOARD_TITLE,
            BOARD_WRITER,
            COUNT,
            CREATE_DATE,
            ORIGIN_NAME
        FROM
            BOARD
        WHERE
            STATUS = 'Y'
        ORDER
            BY
            BOARD_NO DESC ))
WHERE
    RNUM BETWEEN  AND ;
	
	</select>
	
	

</mapper>
